<Window x:Class="OurDecor.InputParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите параметры для расчета"
        Height="500" Width="460"
        Icon="Resources/logo.ico"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="18"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль для TextBox со скругленными углами -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" 
                                BorderBrush="#CCC" 
                                BorderThickness="1" 
                                Background="White">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Border Margin="15" Padding="20" Background="White" CornerRadius="12" 
            BorderBrush="#DDD" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Введите параметры для расчета количества материалов" 
                       FontWeight="Bold" FontSize="22" 
                       Margin="0,0,0,20" 
                       TextWrapping="Wrap"
                       Foreground="#333"/>

            <!-- Количество продукции -->
            <TextBlock Text="Количество продукции:" Margin="0,0,0,6" Foreground="#444"/>
            <TextBox x:Name="QuantityTextBox"/>

            <!-- Параметр 1 -->
            <TextBlock Text="Параметр 1:" Margin="0,12,0,6" Foreground="#444"/>
            <TextBox x:Name="Param1TextBox"/>

            <!-- Параметр 2 -->
            <TextBlock Text="Параметр 2:" Margin="0,12,0,6" Foreground="#444"/>
            <TextBox x:Name="Param2TextBox"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Отмена"
                        Background="#E0E0E0"
                        Foreground="Black"
                        BorderBrush="#CCC"
                        Click="Cancel_Click"/>
                <Button Content="OK"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Click="OK_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
